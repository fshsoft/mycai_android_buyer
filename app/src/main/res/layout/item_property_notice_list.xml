<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_selector"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical"
              android:padding="@dimen/margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_new_flag"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginRight="@dimen/margin_micro"
            android:src="@drawable/img_roundness"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textColor="@color/theme_black_text"
            android:textSize="@dimen/text_size"
            tools:text="333333333"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_micro"
        android:maxLines="2"
        android:textColor="@color/theme_grey_text"
        android:textSize="@dimen/text_size_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mid"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textColor="@color/theme_grey_text"
            android:textSize="@dimen/text_size_small"
            tools:text="3234234"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_micro"
            android:drawableRight="@drawable/ic_arrow_right"
            android:text="点击查看"
            android:textColor="@color/theme_grey_text"
            android:textSize="@dimen/text_size_small"/>
    </LinearLayout>
</LinearLayout>