<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin">

        <com.zongyou.library.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/image_height_small"
            android:layout_height="@dimen/image_height_small"
            android:src="@drawable/ic_default_circle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_micro"
                    android:singleLine="true"
                    android:maxWidth="150dp"
                    tools:text="2222"
                    android:textColor="@color/theme_black_text"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corners_pink_normal"
                    android:paddingLeft="@dimen/margin_micro"
                    android:paddingRight="@dimen/margin_micro"
                    android:textSize="@dimen/text_size_micro"
                    android:text="楼主"
                    android:layout_marginRight="@dimen/margin"
                    android:textColor="@color/white"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_addr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    tools:text="addr"
                    android:textSize="@dimen/text_size_small"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    tools:text="2015-10"
                    android:singleLine="true"
                    android:textColor="@color/theme_grey_text"
                    android:textSize="@dimen/text_size_small"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/comm_divide_line_margin"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin"
        tools:text="XXXXXX"
        android:textColor="@color/theme_black_text"
        android:textSize="@dimen/text_size_big"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        tools:text="32323232"
        android:textColor="@color/theme_black_text"
        android:textSize="@dimen/text_size"/>

    <LinearLayout
        android:id="@+id/ll_img_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:paddingTop="@dimen/margin">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:visibility="gone"
        tools:visibility="visible"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:ellipsize="end"
            android:textColor="@color/theme_grey_text"
            android:textSize="@dimen/text_size"
            android:layout_marginRight="@dimen/margin_small"
            tools:text="33333"/>
        <TextView
            android:id="@+id/tv_user_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_grey_text"
            android:textSize="@dimen/text_size"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_bbs_call"
            android:drawablePadding="@dimen/margin_micro"
            tools:text="33333333"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_contract_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin_micro"
        android:textColor="@color/theme_grey_text"
        android:textSize="@dimen/text_size"
        tools:text="地址："/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/margin">

        <TextView
            android:id="@+id/tv_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_large_biger"
            android:background="@drawable/bg_bbs_heart_gray"
            android:gravity="center_horizontal|bottom"
            android:padding="@dimen/margin_micro"
            android:text="0"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_heart"
            android:background="@drawable/bg_bbs_reply"
            android:gravity="center_horizontal|bottom"
            android:padding="@dimen/margin_micro"
            android:text="0"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <include layout="@layout/comm_divide_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin"
        android:background="@color/theme_background"/>

</LinearLayout>