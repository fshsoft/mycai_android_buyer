<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_list"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.yizan.community.activity.PayWayActivity">

    <ViewStub
        android:id="@+id/pay_goods_viewstub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/item_pay_goods" />

    <ViewStub
        android:id="@+id/pay_recharge_viewstub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/item_pay_recharge" />

    <TextView
        style="@style/Cell_Header_Text"
        android:drawableLeft="@drawable/ic_pay_way"
        android:text="@string/order_d_pay_way"
        android:textColor="@color/theme_grey_text" />

    <ListView
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        >

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/btn_corners_theme_selector"
            android:text="@string/msg_go_pay"
            android:textColor="@color/white" />
    </RelativeLayout>


</LinearLayout>
