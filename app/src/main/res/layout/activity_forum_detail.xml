<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fiftyonemycai365.buyer.bbs.activity.ForumDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <include layout="@layout/activity_base_list"/>
    </RelativeLayout>

    <include layout="@layout/comm_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:paddingTop="@dimen/margin_small">

        <EditText
            android:id="@+id/et_reply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:padding="@dimen/margin_small"
            android:textSize="@dimen/text_size"
            android:background="@drawable/corners_white"
            android:layout_marginRight="@dimen/margin_small"
            android:maxLength="30000"
            android:hint="@string/bbs_reply_hint"
            android:maxLines="3"/>

        <Button
            android:id="@+id/btn_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_pink_selector"
            android:paddingLeft="@dimen/margin_mid"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:paddingRight="@dimen/margin_mid"
            android:text="回帖"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"/>
    </LinearLayout>
</LinearLayout>
