<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fiftyonemycai365.buyer.wy.activity.DistrictDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_drawable"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小区名"
                    android:textColor="@color/theme_black_text"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:textColor="@color/theme_grey_text"
                    android:textSize="@dimen/text_size"
                    tools:text="3234234234"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="户数"
                    android:textColor="@color/theme_black_text"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/tv_nums"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:textColor="@color/theme_grey_text"
                    android:textSize="@dimen/text_size"
                    tools:text="3234234234"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="占地面积"
                    android:textColor="@color/theme_black_text"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:textColor="@color/theme_grey_text"
                    android:textSize="@dimen/text_size"
                    tools:text="3234234234"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="top"
                android:padding="@dimen/margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小区位置"
                    android:textColor="@color/theme_black_text"
                    android:layout_marginRight="@dimen/margin"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/tv_addr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:textColor="@color/theme_grey_text"
                    android:textSize="@dimen/text_size"
                    tools:text="3234234234"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房产类型"
                    android:textColor="@color/theme_black_text"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:textColor="@color/theme_grey_text"
                    android:textSize="@dimen/text_size"
                    tools:text="3234234234"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物业公司"
                    android:textColor="@color/theme_black_text"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/tv_property"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:textColor="@color/theme_grey_text"
                    android:textSize="@dimen/text_size"
                    tools:text="3234234234"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_large_big"
                android:gravity="center_horizontal"
                android:visibility="gone"
                tools:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_grey_text"
                    android:textSize="@dimen/text_size"
                    android:text="小区物业已入驻平台"/>

                <Button
                    android:id="@+id/btn_commit"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:paddingLeft="@dimen/margin"
                    android:paddingRight="@dimen/margin"
                    tools:text="物业"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
