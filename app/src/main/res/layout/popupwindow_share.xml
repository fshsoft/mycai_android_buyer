<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/v_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享至"
            android:textSize="@dimen/text_size"
            android:textColor="@color/gray_text"
            android:layout_margin="@dimen/margin"/>
        <include layout="@layout/comm_divide_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/share_to_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin">
                <ImageView
                    android:id="@+id/img_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cuppon_wx"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textSize="@dimen/text_size_micro"
                    android:layout_below="@id/img_wx"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/share_to_wx_chament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin">
                <ImageView
                    android:id="@+id/img_wx_chament"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cuppon_wx_chament"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信朋友圈"
                    android:textSize="@dimen/text_size_micro"
                    android:layout_below="@id/img_wx_chament"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
