<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/list_selector"
              android:orientation="horizontal"
              android:descendantFocusability="blocksDescendants"
              android:paddingTop="@dimen/margin"
    >

    <com.zongyou.library.widget.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/image_height_small"
        android:layout_height="@dimen/image_height_small"
        android:layout_marginLeft="@dimen/margin"
        android:src="@drawable/ic_default_square"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_micro"
                android:maxWidth="@dimen/bbs_user_nick_max_length"
                tools:text="32323"
                android:singleLine="true"
                android:textColor="@color/theme_black_text"
                android:textSize="@dimen/text_size"
                />

            <TextView
                android:id="@+id/tv_floor_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_pink_normal"
                android:paddingLeft="@dimen/margin_micro"
                android:paddingRight="@dimen/margin_micro"
                android:text="楼主"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_floor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="1"
                android:textColor="@color/theme_grey_text"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_micro"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="addr"
                android:singleLine="true"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                tools:text="2015-10"
                android:textColor="@color/theme_grey_text"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            tools:text="xx"
            android:textColor="@color/theme_black_text"
            android:textSize="@dimen/text_size"/>

        <LinearLayout
            android:id="@+id/ll_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_background"
            android:layout_marginTop="@dimen/margin_mid"
            android:padding="@dimen/margin_mid"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_reply_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_black_text"
                android:textSize="@dimen/text_size"
                tools:text="333"
                />
            <TextView
                android:id="@+id/tv_reply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_micro"
                android:textColor="@color/theme_grey_text"
                android:textSize="@dimen/text_size"
                tools:text="333"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_mid"
            android:background="@drawable/corners_frame_primary_selector"
            android:paddingBottom="@dimen/margin_micro"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_micro"
            android:text="回复"
            android:textColor="@color/theme_main_text"
            android:textSize="@dimen/text_size"/>
    </LinearLayout>

    <include layout="@layout/comm_divide_line_margin"/>
</LinearLayout>